<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.appbuilders.animediapremium.Controls.AutoResizeTextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingLeft="5dp"
        android:id="@+id/chapterNumber"
        android:textAlignment="gravity"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <com.appbuilders.animediapremium.Controls.AutoResizeTextView
        android:id="@+id/chapterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chapterNumber"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/chapterNumber"
        android:layout_toStartOf="@+id/downloadButton"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="hola mundo"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/downloadButton"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        android:layout_toStartOf="@+id/playButton"
        android:src="@drawable/download" />

    <ImageView
        android:id="@+id/playButton"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/play_whi" />

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:paddingRight="10dp"
        android:paddingLeft="45dp"
        android:id="@+id/chapter_progress"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="40dp"
        app:rcProgressColor="@color/yellowItemSelected"
        app:rcBackgroundColor="@color/white"
        android:visibility="gone"/>

</RelativeLayout>